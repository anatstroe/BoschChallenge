apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: {{ app_namespace }}
  name: "{{ ingress_name }}"
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
    - host: localhost
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: "{{ app_service_name }}"
                port:
                  number: 80
